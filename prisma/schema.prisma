
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Trade {
  id          Int      @id @default(autoincrement())
  ticker      String
  side        String   // Long | Short
  type        String   // Equity | Call | Put
  strike      Float?
  expiry      String?
  qty         Int
  entryPrice  Float
  lastPrice   Float?
  status      String   // Open | Closed
  setup       String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
